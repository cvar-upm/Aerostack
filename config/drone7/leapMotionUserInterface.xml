<leap_motion_user_interface>

  <!-- Pitch and Roll -->
  <pitch_roll>
    <enabled>1</enabled>
  
    <configuration description="in degrees">
      <eq_point>0.0</eq_point>
      <dead_zone>
        <max_increment>3.0</max_increment>
        <min_increment>-3.0</min_increment>
      </dead_zone>
      <saturation>
        <max_increment>30.0</max_increment>
        <min_increment>-30.0</min_increment>
      </saturation>
    </configuration>

  </pitch_roll>

  <!-- DYaw -->
  <dyaw>
    <enabled>0</enabled>

    <configuration description="in degrees">
      <eq_point>0.0</eq_point>
      <dead_zone>
        <max_increment>12.0</max_increment>
        <min_increment>-12.0</min_increment>
      </dead_zone>
      <saturation>
        <max_increment>40.0</max_increment>
        <min_increment>-40.0</min_increment>
      </saturation>
    </configuration>

  </dyaw>

  <!-- DAltitude -->
  <daltitude>
    <enabled>0</enabled>

    <configuration description="in milimeters">
      <eq_point>200.0</eq_point>
      <dead_zone>
        <max_increment>35.0</max_increment>
        <min_increment>-35.0</min_increment>
      </dead_zone>
      <saturation>
        <max_increment>120.0</max_increment>
        <min_increment>-120.0</min_increment>
      </saturation>
    </configuration>

  </daltitude>

	
</leap_motion_user_interface>
