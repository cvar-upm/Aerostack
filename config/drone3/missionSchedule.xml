<?xml version="1.0"?>

<mission description="Noche De Los Investigadores">

	<config>
		<precission>
			<x>0.2</x>
			<y>0.2</y>
			<z>0.2</z>
			<yaw>15.0</yaw> <!--deg-->
		</precission>
	</config>


	<submission description="Take-off">
		<config>
			<id>01</id>
		</config>
		<task description="Take-off">
			<config>
				<id>01</id>
			</config>
			<speech>Despegando</speech>
			<command>takeOff</command>
			<modules>
				<h>droneSpeechROSModule</h>
        <j>droneSoundROSModule</j>
			</modules>
		</task>
	</submission>

	<submission description="Navigation and Obstacle Avoidance">
		<config>
			<id>02</id>
			<loop>0</loop>
			
		</config>

    <task description="Hover 2 secs">
			<config>
				<id>10</id>
				<time>2</time>
			</config>
			<command>hover</command>
			<modules>
				<a>droneTrajectoryPlanner</a>
				<c>droneArucoEyeROSModule</c>
				<e>droneOdometryStateEstimator</e>
				<d>droneObstacleProcessor</d>
				<g>droneLocalizer</g>
				<h>droneSpeechROSModule</h>
        <i>droneObstacleDistanceCalculator</i>
        <j>droneSoundROSModule</j>
			</modules>
		</task>

    <task description="Altura">
			<config>
				<id>11</id>
			</config>
			<command>moveTrajObsAvoid</command>
			<modules>
				<a>droneTrajectoryPlanner</a>
				<c>droneArucoEyeROSModule</c>
				<e>droneOdometryStateEstimator</e>
				<d>droneObstacleProcessor</d>
				<f>droneYawPlanner</f>
				<g>droneLocalizer</g>
				<h>droneSpeechROSModule</h>
        <i>droneObstacleDistanceCalculator</i>
        <j>droneSoundROSModule</j>
			</modules>
			<point>
				<z>1.3</z>
			</point>
			<yaw>90.0</yaw>
		</task>

  <task description="Sleep">
			<config>
				<id>20</id>
        <time>2.0</time>
			</config>
			<command>sleep</command>
			<modules>
				<a>droneTrajectoryPlanner</a>
				<c>droneArucoEyeROSModule</c>
				<e>droneOdometryStateEstimator</e>
				<d>droneObstacleProcessor</d>
				<f>droneYawPlanner</f>
				<g>droneLocalizer</g>
				<h>droneSpeechROSModule</h>
        <i>droneObstacleDistanceCalculator</i>
        <j>droneSoundROSModule</j>
			</modules>
		</task>

		
		<task description="Move to point final">
			<config>
				<id>30</id>
			</config>
			<command>moveTrajObsAvoid</command>
			<speech>Movimiento En trayectoria</speech>
			<modules>
				<a>droneTrajectoryPlanner</a>
				<c>droneArucoEyeROSModule</c>
				<e>droneOdometryStateEstimator</e>
				<d>droneObstacleProcessor</d>
				<f>droneYawPlanner</f>
				<g>droneLocalizer</g>
				<h>droneSpeechROSModule</h>
        <i>droneObstacleDistanceCalculator</i>
        <j>droneSoundROSModule</j>
			</modules>
			<point>
				<x>7.0</x>
				<y>11.0</y>
				<z>1.3</z>
			</point>
			<yaw>90</yaw>
		</task>
  </submission>
		
	

	<submission description="FINAL LAND">
		<config>
			<id>05</id>
		</config>

    <task description="Move to Initial Point">
			<config>
				<id>01</id>
			</config>
			<command>moveTrajObsAvoid</command>
			<point>
				<z>1.3</z>
			</point>
			<modules>
				<a>droneTrajectoryPlanner</a>
				<c>droneArucoEyeROSModule</c>
				<e>droneOdometryStateEstimator</e>
				<d>droneObstacleProcessor</d>
				<f>droneYawPlanner</f>
				<g>droneLocalizer</g>
				<h>droneSpeechROSModule</h>
        <i>droneObstacleDistanceCalculator</i>
        <j>droneSoundROSModule</j>
			</modules>
			<yaw>90</yaw>
		</task>

		<task description="FINAL LAND">
			<config>
				<id>02</id>
			</config>
			<command>land</command>
			<speech>Aterrizar</speech>
			<modules>
				<e>droneOdometryStateEstimator</e>
				<h>droneSpeechROSModule</h>
        <i>droneObstacleDistanceCalculator</i>
        <j>droneSoundROSModule</j>
			</modules>
		</task>	
	</submission>


</mission>
