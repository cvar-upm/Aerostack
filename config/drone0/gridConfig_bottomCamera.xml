<!-- ///////////////// GRID ///////////////// -->

<grid>
	<!-- resize the input to this size for reducing processing costs -->
	<width units="pixels">   	140 </width>
	<height units="pixels">   	105 </height>

	<!-- number of cells used by the distance transform sampling -->
	<horizontalCells>   		16 </horizontalCells>
	<verticalCells>   		12 </verticalCells>

	<!-- these parameters should not be modified unless you get segmentation issues -->
	<!-- this controls the expected ratio of pixels left  after segmentation -->
	<maskWhiteRatio>   		0.15 </maskWhiteRatio>
	<!-- this controls the color removal of segmentations "leaking" to the background -->
	<redColorBG>   			150 </redColorBG>
	<greenColorBG>   		100 </greenColorBG>
	<blueColorBG>   		80 </blueColorBG>
	
	<!-- This is the threshold used in YCbCr Y channel. Lower it if you don't get grid points -->
	<Y_channel_thresh>		150	</Y_channel_thresh>

	<!-- RANSAC parameters -->
	<!-- RANSAC max iterations-->
	<ransac_max_iterations>   	15000 </ransac_max_iterations>
	<!-- RANSAC max inlier distance from a line model -->
	<ransac_max_inlier_distance>   		3 </ransac_max_inlier_distance>
	<!-- RANSAC min imliers for a line model to be valid-->
	<ransac_min_inliers>   		8 </ransac_min_inliers>
	
	<!-- intersection clustering radius-->
	<clusteringRadius units="pixels">   		60 </clusteringRadius>
	
</grid>

